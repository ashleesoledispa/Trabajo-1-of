@model IEnumerable<Trabajo_1.Models.Equipo>

@{
    ViewData["Title"] = "List";
}

<h1>List</h1>

<style>
    body, table, th, td {
        color: white;
    }
</style>

<p>
    <a class="btn btn-info" asp-action="Create">Create New</a>
</p>

<table class="table" id="id-posiciones">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosJugados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosGanados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosPerdidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PartidosEmpatados)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    <img src="~/images/@item.Logo" alt="logo" width="30" height="30" style="margin-right: 10px;" />
                    @item.Nombre
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosJugados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosGanados)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosPerdidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PartidosEmpatados)
                </td>
                <td>
                    @Html.ActionLink("Ver informacion", "Detalles", new { id = item.Id }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-success" }) |
                </td>
            </tr>
        }
    </tbody>
</table>
