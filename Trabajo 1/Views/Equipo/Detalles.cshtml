@model Trabajo_1.Models.Equipo

@{
    ViewData["Title"] = "Detalles del Equipo";
}

<h2>@Model.Nombre</h2>

<img src="~/images/@Model.Logo" alt="Logo del equipo" width="150" />
<p><strong>ID:</strong> @Model.Id</p>
<p><strong>Partidos Jugados:</strong> @Model.PartidosJugados</p>
<p><strong>Ganados:</strong> @Model.PartidosGanados</p>
<p><strong>Empatados:</strong> @Model.PartidosEmpatados</p>
<p><strong>Perdidos:</strong> @Model.PartidosPerdidos</p>

<hr />

<h3>Calcular puntos del equipo</h3>

<form id="formPuntos">
    <label>Partidos Jugados:</label>
    <input type="number" id="jugados" /><br />

    <label>Ganados:</label>
    <input type="number" id="ganados" /><br />

    <label>Empatados:</label>
    <input type="number" id="empatados" /><br />

    <label>Perdidos:</label>
    <input type="number" id="perdidos" /><br />

    <button type="button" onclick="calcularPuntos()">Calcular Puntos</button>
</form>

<h4 id="resultadoPuntos" style="margin-top: 10px;"></h4>

<script>
    function calcularPuntos() {
        let ganados = parseInt(document.getElementById("ganados").value) || 0;
        let empatados = parseInt(document.getElementById("empatados").value) || 0;
        let puntos = ganados * 3 + empatados * 1;
        document.getElementById("resultadoPuntos").innerText = "Total de puntos: " + puntos;
    }
</script>

